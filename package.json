{
  "name": "letter-wheel",
  "description": "Mobile-platform word search game",
  "version": "0.9.0",
  "main": "src/",
  "license": "MIT",
  "author": {
    "name": "Wolf Hatch"
  },
  "engines": {
    "node": ">= 7.9.0"
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": ".tmp/coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "jest_setup.js"
    ],
    "preset": "react-native",
    "setupFiles": [
      "./jest_setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "./node_modules/*",
      "./.history/*",
      "./.tmp/*",
      "./.vagrant/*",
      "./.vscode/*",
      "./android/*",
      "./dictionary/*",
      "./ios/*",
      "./logo/*",
      "./scripts/*"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.(bmp|gif|jpg|jpeg|png|psd|svg|webp)$": "<rootDir>/jest_imageTransform.js"
    },
    "transformIgnorePatterns": [
      "./node_modules/jsdom/*",
      "./node_modules/request/*"
    ]
  },
  "scripts": {
    "prebuild": "sudo mkdir -p /run/secrets && sudo bash -c 'read -rsp \"Keystore password: \" KEYSTORE && echo \"$KEYSTORE\" > /run/secrets/pwd'",
    "build": "cd ./android && PASSWORD=$(cat /run/secrets/pwd) ./gradlew assembleRelease",
    "deploy": "/vagrant/node_modules/.bin/react-native run-android",
    "predev": "yarn run kill && adb reverse tcp:3030 tcp:3030",
    "dev": "nohup /vagrant/node_modules/.bin/react-native start >/vagrant/react-native.log 2>&1 </dev/null &",
    "prekill": "watchman watch-del-all",
    "kill": "./scripts/clean.sh",
    "log-android": "adb logcat",
    "log-native": "tail -f -n 50 /vagrant/react-native.log",
    "start": "yarn dev",
    "poststart": "yarn deploy",
    "clean": "rm -rf ./android/build/*; rm -rf ./android/app/build/*; rm -rf ./android/.gradle/*",
    "test": "jest",
    "test-build": "cd ./android && BUILDTYPE=TEST ./gradlew assembleRelease",
    "test-update": "jest --updateSnapshot"
  },
  "dependencies": {
    "@ptomasroos/react-native-multi-slider": "^1.0.0",
    "babel-cli": "^6.7.7",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "hyperlink": "^4.1.0",
    "keyevent": "^1.1.0",
    "mobx": "^5.11.0",
    "mobx-react": "^6.1.1",
    "prop-types": "^15.7.2",
    "react": "16.8.3",
    "react-native": "^0.59.9",
    "react-native-animatable": "^1.3.2",
    "react-native-checkbox": "^2.0.0",
    "react-native-gesture-handler": "^1.3.0",
    "react-native-hyperlink": "^0.0.14",
    "react-native-keyevent": "^0.1.2",
    "react-native-loading-spinner-overlay": "^1.0.1",
    "react-native-mock-render": "^0.1.5",
    "react-native-modalbox": "^1.7.1",
    "react-native-screens": "^1.0.0-alpha.22",
    "react-native-simple-store": "^2.0.0",
    "react-native-size-matters": "^0.2.1",
    "react-native-sqlite-storage": "^3.3.10",
    "react-native-timer": "^1.3.6",
    "react-native-vector-icons": "^6.6.0",
    "react-navigation": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "jest": "^24.8.0",
    "jsdom": "^15.1.1",
    "metro-react-native-babel-preset": "^0.55.0",
    "mockdate": "^2.0.3",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6"
  }
}
